@using test2.TextSource;
@using test2.ViewModels.Default;
@model DefaultViewModel
@{
    ViewBag.Title = "Areas Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="mainNews" style="background-image:url(@Model.servicesImage.ServicesPhoto)">
    <div class="imgOverlay"></div>
    <div class="container-fluid">
        <div class="container">
            <div class="middleService">
                <div class="iconTop">
                    <i class="icons fa fa-balance-scale"></i>
                </div>
                <h1 class="serTittle">@RHome.MNews</h1>
                <div class="breadCrump">
                    <ol>
                        <li><a href="@Url.Action("Index", "Home")">@RHome.MHome</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="serviceInfo">
    <div class="container-fluid">
        <div class="container">
            <div class="col-md-8">
                <div class="col-md-12">
                    <div class="serviceContent">
                        <div class="serTop">
                            <h2 class="title">@Model.areasOfDetail.Headline</h2>
                        </div>
                        <div class="">
                            <p> @Html.Raw(Model.areasOfDetail.Description)</p>
                        </div>
                        <div class="vc_empty_space"></div>

                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="serviceRight">
                    <div class="tittle-widget">
                        Practices Areas
                    </div>
                    <div class="practiceList">
                        <ul class="list-unstyled">

                            @{
                                Html.RenderAction("LastAreasOfactivity", "Home");
                            }
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


