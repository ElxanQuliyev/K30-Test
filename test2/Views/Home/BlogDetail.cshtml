@using test2.ViewModels.Default;
@model  DefaultViewModel

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="mainNews" style="background-image: url(@Model.newsImage.NewsPhoto)">
    <div class="container-fluid">
        <div class="container">
            <div class="middleService">
                <div class="iconTop">
                    <i class="icons fa fa-balance-scale"></i>
                </div>
                <h1 class="serTittle">@RHome.MNews</h1>
                <div class="breadCrump">
                    <ol>
                        <li><a href="@Url.Action("Index","Home")">@RHome.MHome</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="newsInfo">
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                    <a href="#">
                        @if (Model.articleOne.ArticlePhoto != null)
                        {


                            <img src="@Model.articleOne.ArticlePhoto" alt="" class="img-responsive">
                        }
                        else
                        {
                            <div class="video_wrapper video_wrapper_full js-videoWrapper">
                                <iframe style="width:100%;background:#ccc" height="527 " class="videoIframe js-videoIframe" src="//www.youtube.com/embed/@Model.articleOne.IframeLink" frameborder="0" allowTransparency="true" allowfullscreen></iframe>
                            </div>
                        }
                    </a>
                    <div class="blockContent">
                        <div class="blockTop">
                            <a href="#" class="layout-tittle">@Model.articleOne.Headline</a>
                        </div>
                        <p class=" text-muted"><em><i class="glyphicon glyphicon-time fa-fw"></i>@String.Format("{0:MMMM dd, yyyy}", Model.articleOne.CreateDate) @*<span class="col-sm-offset-2"><i class="fa fa-comments-o" aria-hidden="true"></i>@Model.Comments.Count()</span>*@</em></p>
                        <hr>
                        <p>
                            <em>
                                @Html.Raw(Model.articleOne.ArticleContent)
                            </em>
                        </p>

                        <div class="clearfix"></div>
                    </div>
                    <div id="disqus_thread"></div>
                    <script>

                        var disqus_config = function () {
                            this.page.url = PAGE_URL;  // Replace PAGE_URL with your page's canonical URL variable
                            this.page.identifier = PAGE_IDENTIFIER; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
                        };

                        (function () { // DON'T EDIT BELOW THIS LINE
                            var d = document, s = d.createElement('script');
                            s.src = 'https://sabirandpartners.disqus.com/embed.js';
                            s.setAttribute('data-timestamp', +new Date());
                            (d.head || d.body).appendChild(s);
                        })();
                    </script>
                    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

                </div>
                <div class="col-md-4 DetailPost">
                    <div class="col-md-12">
                        <div class="serviceSearch">
                            @Html.Partial("SearchPartial")
                        </div>
                        <div class="newsResentPost ">
                            @foreach (var item in Model.article)
                            {

                                <div class="row mainElement">
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="block-image">
                                                <a class="link" href="@Url.Action("BlogDetail", "Home", new { id = item.ArticleId,title=Html.ClearnUrl(item.Headline) })"></a>

                                                @if (item.ArticlePhoto != null)
                                                {
                                                    <div class="promo-box-image">
                                                        <img src="@item.ArticlePhoto" alt="@item.Headline" class="img-responsive img-full img-thumbnail" />
                                                    </div>
                                                    <div class="promo-box-content">
                                                        <i class="icons-image far fa-image fa-2x"></i>
                                                    </div>
                                                }
                                                else
                                                {
                                                    if (item.IframeLink != null)
                                                    {
                                                        <div class="promo-box-image">
                                                            <img id="img" class="img-thumbnail img-responsive " alt="@item.Headline" style="width:100%" src="https://i.ytimg.com/vi/@item.IframeLink/hqdefault.jpg">
                                                        </div>
                                                        <div class="promo-box-content">
                                                            <i class="icons-video far fa-play-circle fa-2x "></i>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="block-title">
                                            @if (item.Headline.Length > 60)
                                            {
                                                <a href="@Url.Action("BlogDetail", "Home", new { id = item.ArticleId ,title=Html.ClearnUrl(item.Headline)})">
                                                    @Html.Raw(item.Headline.Substring(0, 60))...
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("BlogDetail", "Home", new { id = item.ArticleId ,title=Html.ClearnUrl(item.Headline)})">
                                                    @Html.Raw(item.Headline)
                                                </a>

                                            }
                                            <div class="clearfix"></div>
                                            <p class=" text-muted"><em><small><i class="glyphicon glyphicon-time fa-fw"></i>@String.Format("{0:MMMM dd, yyyy}", item.CreateDate) </small></em></p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

