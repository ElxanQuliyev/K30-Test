@using test2.TextSource;
@using test2.ViewModels.Default;
@model DefaultViewModel
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<section id="mainNews" style="background-image:url(@Model.AboutImage.AboutUsPhoto)">
    <div class="imgOverlay"></div>
    <div class="container-fluid">
        <div class="container">
            <div class="middleService">
                <div class="iconTop">
                    <i class="icons fa fa-balance-scale"></i>
                </div>
                <h1 class="serTittle">@RHome.MNews</h1>
                <div class="breadCrump">
                    <ol>
                        <li><a href="@Url.Action("Index", "Home")">@RHome.MHome</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!--How We Are-->
<section id="HowWeAre">
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="vc_empty_space"></div>
                <div class="col-md-12">
                    <div class="practiceTop">
                        <img class="responsive" src="img/title-icon-1.png">
                        <div class="clearfix"></div>
                        <span class="subtitle">@RHome.MWELCOME</span>
                        <h2 class="news-title">@RHome.MWHATWEDO</h2>
                    </div>
                </div>
            </div>
            <div class="vc_empty_space"></div>
            <div class="vc_empty_space"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="headingLeft">
                                    <small>@Html.Raw(Model.howWeAre.Description)</small>
                                <div class="vc_empty_space"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="headingRight">
                                <img src="@Model.howWeAre.HPhoto" alt="" class="img-responsive">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/How We Are-->
