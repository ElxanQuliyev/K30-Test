@model test2.Models.Article

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/SMAdm/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Headline)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Headline)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArticleContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArticleContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Reads)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reads)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArticlePhoto)
        </dt>
        @if (Model.ArticlePhoto!=null)
        {
            <dd>
                @Html.DisplayFor(model => model.ArticlePhoto)
            </dd>
        }
        else {
            <dd>
                @if (Model.IframeLink != null)
                {
                    <img id="img" class="img-thumbnail img-responsive img-full" alt="@Model.Headline" style="width:100%" src="https://i.ytimg.com/vi/@Model.IframeLink/hqdefault.jpg">
               
                }
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.LanguageTB.CultureCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LanguageTB.CultureCode)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
