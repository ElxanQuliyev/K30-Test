@model IEnumerable<test2.Models.ResetImageTB>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SMAdm/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>
<table class="table">
    <tr>
        <th>
            @Html.Label("Reset Background")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.ResetPhoto" width="95" class="img-responsive" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ResetImageId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ResetImageId }) |
        </td>
    </tr>
}

</table>
