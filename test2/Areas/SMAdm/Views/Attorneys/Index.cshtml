@model IEnumerable<test2.Models.AttorneyTB>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SMAdm/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Phone1)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Phone2)
        </th>*@

        <th>
            @Html.DisplayNameFor(model => model.WorkSector)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguageTB.CultureCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttorneyPhoto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Phone1)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Phone2)
        </td>*@

        <td>
            @Html.DisplayFor(modelItem => item.WorkSector)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageTB.CultureCode)
        </td>
        <td>
            <img src="@item.AttorneyPhoto" class="img-responsive" width="50" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.AttorneyId }) |
            @Html.ActionLink("Details", "Details", new { id = item.AttorneyId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AttorneyId })
        </td>
    </tr>
}

</table>
